{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Preserve",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": ["node"],
		"lib": ["ES2022"]
	},
	"include": ["src/**/*", "*.ts"],
	"exclude": ["node_modules", "dist"]
}
